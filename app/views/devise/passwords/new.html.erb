<div class="main-container" id="form-container">

  <div class="col-6 col-lg-6">

  <h2 class="form-h2">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="login-form-inputs">
      <div class="login-input-field">
        <%= f.input :email,
                    label: false,
                    placeholder: "Email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
    </div>

    <div id="form-cta">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-go btn-submit", style: "width: 100%"  %>
    </div>
  <% end %>

  <div style="text-align: center">
    <%= render "devise/shared/links" %>
  </div>

</div>

    <div class="col-6 col-lg-6">
      <img src="https://images.unsplash.com/photo-1492129214534-08dd697407ec?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
    </div>

</div>
